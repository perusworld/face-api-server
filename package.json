{
  "name": "node-ts-express-base",
  "version": "3.0.0",
  "description": "Node.js TypeScript Express - Base",
  "scripts": {
    "test": "jest",
    "build": "node ./node_modules/typescript/bin/tsc",
    "postinstall": "node ./node_modules/typescript/bin/tsc",
    "start": "node ./bin/www"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.(ts|tsx|js|html)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/perusworld/node-ts-express-base.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "module"
  ],
  "engines": {
    "node": "8.1.4"
  },
  "author": "Saravana Perumal Shanmugam <saravanaperumal@msn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perusworld/node-ts-express-base/issues"
  },
  "homepage": "https://github.com/perusworld/node-ts-express-base",
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/jest": "^20.0.8",
    "@types/node": "^7.0.48",
    "@types/request": "0.0.45",
    "jest": "^20.0.4",
    "request": "^2.83.0",
    "ts-jest": "^20.0.14",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "color-convert": "^1.9.1",
    "express": "^4.16.2",
    "pug": "^2.0.0-rc.4"
  }
}
